@model PagedList.IPagedList<BillViewCls>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Bills";
}

<center>
    <h2 class="section-to-print"><b>@ViewBag.Title</b></h2>
    
    @using (Html.BeginForm("Index", "BillViewCls", FormMethod.Get))
    {        
        <div class="row section-to-Not-print">
            <div>
                <table>
                    <tr style="text-align:center">
                        <td>&nbsp; Bill Name:</td>
                        <td> @Html.TextBox("PropName", ViewBag.CurrentFilter as string, new { @class = "form-control" })</td>

                        <td class="col-lg-1"></td>
                        <td><input type="submit" value="Search" class="btn btn-default" /></td>
                    </tr>
                </table>
            </div>
        </div>
    }
</center>

<p>
    @Html.ActionLink("Create New", "Manage")
   
      
</p>
<table class="table">
    <tr>
       

        <th>No Of Guest</th>
       <th>Date Of Arrival</th>
        <th>Date Of Departure</th>
        <th>Charges Per Day</th>
        <th>Room No</th>
        <th>Total Days</th>
        <th>Bill/Receipt No</th>
        <th>Amount GST Tax</th>
        <th>Paid In Foreign/Indian</th>
        
       

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.NoOfGuest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateArrivalTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateDepartureTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChargesPerDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNo)
        </td>
          
    <td>
        @Html.DisplayFor(modelItem => item.TotalDays)
    </td>
       
    <td>
        @Html.DisplayFor(modelItem => item.PeriodToStay)
    </td>
      
    <td>
        @Html.DisplayFor(modelItem => item.BillReceiptNo)
    </td>
      
    <td>
        @Html.DisplayFor(modelItem => item.AmountGSTTax)
    </td>
       
    <td>
        @Html.DisplayFor(modelItem => item.PaidInForeignIndian)
    </td>

        <td>
            @Html.ActionLink("Edit", "Manage", new { id = item.BillID})
        </td>
      
    </tr>
}

</table>
