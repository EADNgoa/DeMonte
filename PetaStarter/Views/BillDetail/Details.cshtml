@model  DeMonte.BillScreen

@{
    ViewBag.Title = "Details";
 
}
<div class="section-to-print" style="background-image: url('/Custom/BkGrnd.png'); background-repeat: no-repeat; background-attachment: fixed; background-position: center; ">
    @Html.Partial("_LetterHead")

    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @*@Html.Hidden("BillID", (int)ViewBag.BillID)*@



        <table align="center">
            @*Bill Header*@
            <tr>
                <td class="col-md-4">Bill No:<u>@Html.DisplayFor(modelItem => Model.Bill.BillID)</u></td>
                <td></td>
                <td class="col-md-6">Date:<u>@Html.DisplayFor(modelItem => Model.Bill.TransactionDate)</u></td>
            </tr>

            <tr>
                <td class="col-md-4">Name:<u>@Html.DisplayFor(modelItem => Model.Customer.Name)</u></td>
                <td></td>
                <td>No of Persons:<u>@Html.DisplayFor(modelItem => Model.Bill.NoOfGuest)</u></td>
            </tr>
            <tr>
                <td class="col-md-4">Address:<u>@Html.DisplayFor(modelItem => Model.Customer.Address)</u></td>
                <td></td>
                <td>Room Charges per day:<u>@Html.DisplayFor(modelItem => Model.Bill.ChargesPerDay)</u></td>
            </tr>
            <tr>
                <td class="col-md-4">Date Of Arrival:<u>@Html.DisplayFor(modelItem => Model.Bill.DateArrivalTime)</u></td>
                <td>Date Of Departure:<u>@Html.DisplayFor(modelItem => Model.Bill.DateDepartureTime)</u></td>
                <td class="col-md-4">Total Days:<u>@Html.DisplayFor(modelItem => Model.Bill.TotalDays)</u></td>
            </tr>

            <tr>
                <td class="col-md-4">Register No:<u>das</u></td>

                <td>Room No:<u>@Html.DisplayFor(modelItem => Model.Bill.RoomNo)</u></td>
                <td class="col-md-4">Adv Receipt No:<u>@Html.DisplayFor(modelItem => Model.Bill.AdvReceiptNo)</u></td>
            </tr>
            <hr />
        </table>



    <div class="form-horizontal" align="center">
        <h4>Bill Details</h4>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("BillID", (int)ViewBag.BillID)
        @Html.HiddenFor(model => model.FrmEdit.BillDetailID)

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Date" type="Date" class="form-control text-box single-line valid" id="Date" aria-invalid="false" aria-describedby="Date-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.ExtraPerson, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="ExtraPerson" class="form-control text-box single-line valid" id="ExtraPerson" aria-invalid="false" aria-describedby="ExtraPerson-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.ExtraPerson, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Miscelleneous, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Miscelleneous" class="form-control text-box single-line valid" id="Miscelleneous" aria-invalid="false" aria-describedby="Miscelleneous-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">

                @Html.ValidationMessageFor(model => model.FrmEdit.Miscelleneous, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Other1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Other1" class="form-control text-box single-line valid" id="Other1" aria-invalid="false" aria-describedby="Other1-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.Other1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Other2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Other2" class="form-control text-box single-line valid" id="Other2" aria-invalid="false" aria-describedby="Other2-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.Other2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Other3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Other3" class="form-control text-box single-line valid" id="Other3" aria-invalid="false" aria-describedby="Other3-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.Other3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FrmEdit.Other4, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="Other4" class="form-control text-box single-line valid" id="Other4" aria-invalid="false" aria-describedby="Other4-error" type="text" data-val-number="The field Others 1 must be a number." data-val="true" data-val-range-min="0" data-val-range-max="1.79769313486232E+308" data-val-range="The field Others 1 must be between 0 and 1.79769313486232E+308.">
                @Html.ValidationMessageFor(model => model.FrmEdit.Other4, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <td><input action="action" onclick="window.history.go(-1); return false;" type="button" value="Back" class="btn btn-default"/></td>
            </div>
        </div>
    </div>
    }
</div>

            <br />
<div class="section-to-print">
            @if (ViewBag.BillDetail == null)
            {
                <table class="table section-to-print" align="center">
                    <tr>
                        <th>
                            Sr No
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Extra Person
                        </th>
                        <th>
                            GST
                        </th>
                      
                        <th>
                            Miscelleneous
                        </th>
                        <th>
                            Other 1
                        </th>
                        <th>
                            Other 2
                        </th>
                        <th>
                            Other 3
                        </th>
                        <th>
                            Other 4
                        </th>

                        <th>
                            Total
                        </th>
                        <th> </th>
                        <th> </th>
                            
                    </tr>
                    @{int i = 1;   }
                    @foreach (var item in Model.BillDetail)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExtraPerson)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GST)
                            </td>
                          
                            <td>
                                @Html.DisplayFor(modelItem => item.Miscelleneous)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Other1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Other2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Other3)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Other4)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                               
                            </td>
                            <td>
                                @Html.ActionLink("Print", "PrintDetail", "BillDetail", new { PID = item.BillID }, null);
                            </td>

                            <td class="section-to-Not-print">
                                @Html.ActionLink("Edit", "Manage", new { id = item.BillDetailID })
                            </td>
                        </tr>

                        i++;
                    }


                </table>

             }
</div>