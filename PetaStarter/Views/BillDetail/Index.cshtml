@model PagedList.IPagedList<DeMonte.BillDetailViewCls>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Bills";
}

<center>
    <h2 class="section-to-print"><b>@ViewBag.Title</b></h2>
    
    @using (Html.BeginForm("Index", "BillDetail", FormMethod.Get))
    {        
        <div class="row section-to-Not-print">
            <div>
                <table>
                    <tr style="text-align:center">
                        <td>&nbsp; Bill Name:</td>
                        <td> @Html.TextBox("PropName", ViewBag.CurrentFilter as string, new { @class = "form-control" })</td>

                        <td class="col-lg-1"></td>
                        <td><input type="submit" value="Search" class="btn btn-default" /></td>
                    </tr>
                </table>
            </div>
        </div>
    }
</center>

<p>
    @Html.ActionLink("Create New", "Manage")
   
      
</p>
<table class="table">
    <tr>
       

        <th>Date</th>
       <th>Extra Person</th>
        <th>GST</th>
        <th>Miscelleneous</th>
        <th>Other 1</th>
        <th>Other 2</th>
        <th>Other 3</th>
        <th>Other 4</th>
        <th>Total</th>
      
       

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExtraPerson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GST)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Miscelleneous)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Other1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Other2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Other3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Other4)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Total)
         </td>
       
       
        <td>
            @Html.ActionLink("Edit", "Manage", new { id = item.BillID})
        </td>
      
    </tr>
}

</table>
