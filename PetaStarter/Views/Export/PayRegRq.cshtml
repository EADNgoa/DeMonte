
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm((string) ViewBag.action, "Export",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Choose Period</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class = "control-label col-md-2">Choose month</label>
            <div class="col-md-10">
                @Html.DropDownList("PayMonth", (IEnumerable<SelectListItem>) ViewBag.MonthBox, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Choose year</label>
            <div class="col-md-10">
                @Html.DropDownList("PayYear", (IEnumerable<SelectListItem>) ViewBag.YearBox, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

       

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ViewBag.Title" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
